<title>decagon: a forum for creatives | #<%= @board %></title>  
<div class = "board_name">
	<a href = "/<%= @board_name %>">#<%= @board_name %></a>
</div>

<div class = "form">
	<form action = "/<%= @board_name %>" method = "post">
		<textarea name="body"></textarea>
	 	<input type = "submit" value = "submit" class = "thread_button"/>
	</form>
</div>

<% @board_posts.each do |post| %>
	<div class = "post">
		<p />
		<p><b><a href = "/<%= post.board%>/thread/<%= post.thread%>"><%= post.id%></a></b> posted on <%= post.created_on %></p>
		<p><%= post.body %></p>
	</div>
<% end %>