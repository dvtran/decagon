<div class = "form">
	<form action = "/" method = "post">
		<textarea name="body"></textarea>
	 	<input type = "submit" value = "submit" class = "thread_button"/>
	</form>
</div>

<% @posts.each do |post| %>
	<div class = "post">
		<h3><a href = "/thread/<%= post.thread%>"><%= post.id%></a></h3>
		<p><%=escape post.body %></p>
		<hr />

	</div>
<% end %>